#!/usr/bin/env node
process.bin = process.title = 'kick';

"use strict";
var fs          = require('fs-extra');
var colors      = require('colors');
var logger      = require('../lib/logger');
var utils       = require('../lib/utils');
var commands    = require('../lib/commands/commands');
var command     = process.argv[2];
var ROOT        = __dirname + '/..';
var kickVersion = fs.readJSONSync(ROOT + '/package.json')['version'];

utils.ensureNodeVersion();

switch (command) {
  case '--version':
  case '-v':
    console.log(kickVersion);
    break;
  case 'help':
  case '--help':
  case 'h':
  case '-h':
    commands.help();
    break;
  case 'about':
  case 'a':
    commands.about();
    break;
  case 'new':
  case 'n':
    commands.new();
    break;
  case 'generate':
  case 'g':
    commands.generate();
    break;
  case 'destroy':
  case 'd':
    commands.destroy();
    break;
  case 'setup':
  case 'set':
    commands.setup();
    break;
  case 'server':
  case 's':
    commands.server();
    break;
  case 'server:tdd':
  case 's:tdd':
  case 'ass':
    commands.serverTdd();
    break;
  case 'build':
  case 'b':
    commands.build();
    break;
  case 'test':
  case 't':
    commands.test();
    break;
  case 'upgrade':
  case 'u':
    commands.upgrade();
    break;
  default:
    if (command) {
      logger.warn("kick didn't recognize the ".yellow + command.blue + ' command. Run '.yellow + 'kick help'.blue + ' to see all available commands'.yellow)
    } else {
      logger.warn("You didn't specify any command");
    }
}
